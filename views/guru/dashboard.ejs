<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Kandidat</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #4a90e2;
        color: #333;
        margin: 0;
        padding: 0;
      }
      .container {
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        width: 60%;
        border-radius: 10px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      th {
        background-color: #f2f2f2;
        color: #333;
      }
      .navbar {
        background-color: #3a79d1;
        padding: 10px 0;
        text-align: right;
        padding-right: 20px;
      }
      .navbar a {
        margin-left: 15px;
        color: white;
        text-decoration: none;
        font-weight: bold;
      }
      .logout-btn {
        background-color: red;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-transform: uppercase;
        cursor: pointer;
      }
      .logout-btn:hover {
        background-color: darkred;
      }
      .card {
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        width: 60%;
      }
      .ranking-title {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
      }
      .class-table {
        width: 100%;
        border-collapse: collapse;
      }
      .class-table th,
      .class-table td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      .class-table th {
        background-color: #f2f2f2;
        color: #333;
      }
    </style>
  </head>
  <body>
    <div class="navbar">
      <a href="/guru/dashboard">Data Kandidat</a>
      <a href="/guru/list_siswa">Pengisian Nilai</a>
      <a href="/guru/profile">Profile</a>
      <button class="logout-btn"><a href="/logout">Log Out</a></button>
    </div>

    <div class="container">
      <h2>Data Kandidat</h2>
      <table>
        <tr>
          <th>Kelas</th>
          <th>Nama Siswa</th>
          <th>NISN</th>
        </tr>
        <% siswaList.forEach(function(siswa) { %>
        <tr>
          <td><%= siswa.kelas %></td>
          <td><%= siswa.nama_lengkap %></td>
          <td><%= siswa.nis %></td>
        </tr>
        <% }); %>
      </table>
    </div>
    <div class="card">
      <div class="card">
        <h2 class="ranking-title">PERINGKAT KELAS</h2>
        <table class="class-table">
          <thead>
            <tr>
              <th>Kelas</th>
              <th>Nama Siswa</th>
              <th>Peringkat</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach(function(student, index) { %>
            <tr>
              <td><%= student.kelas %></td>
              <td><%= student.nama %></td>
              <td><%= index + 1 %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
