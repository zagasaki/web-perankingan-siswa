<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pengisian Nilai</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #4a90e2;
        color: #333;
        margin: 0;
        padding: 0;
      }
      .container {
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        width: 60%;
        border-radius: 10px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      th {
        background-color: #f2f2f2;
        color: #333;
      }
      .navbar {
        background-color: #3a79d1;
        padding: 10px 0;
        text-align: right;
        padding-right: 20px;
      }
      .navbar a {
        margin-left: 15px;
        color: white;
        text-decoration: none;
        font-weight: bold;
      }
      .logout-btn {
        background-color: red;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-transform: uppercase;
        cursor: pointer;
      }
      .logout-btn:hover {
        background-color: darkred;
      }
      .action-btn {
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        color: white;
        cursor: pointer;
      }
      .edit-btn {
        background-color: #007bff;
      }
      .delete-btn {
        background-color: #dc3545;
      }
      .edit-btn:hover {
        background-color: #0056b3;
      }
      .delete-btn:hover {
        background-color: #c82333;
      }
      input[type="text"] {
        width: 60px;
        text-align: center;
        padding: 5px;
        border-radius: 5px;
        border: 1px solid #ddd;
      }
    </style>
  </head>
  <body>
    <div class="navbar">
      <a href="/guru/dashboard">Data Kandidat</a>
      <a href="/guru/pengisian-nilai">Pengisian Nilai</a>
      <a href="/guru/profile">Profile</a>
      <button class="logout-btn"><a href="/logout">Log Out</a></button>
    </div>

    <div class="container">
      <h2>Pengisian Nilai</h2>
      <table>
        <tr>
          <th>Kode</th>
          <th>Kriteria</th>
          <th>Nilai</th>
          <th>Edit</th>
          <th>Hapus</th>
        </tr>
        <% dataNilai.forEach(function(nilai) { %>
        <tr>
          <td><%= nilai.kode %></td>
          <td><%= nilai.kriteria %></td>
          <td><input type="text" value="<%= nilai.nilai %>" readonly /></td>
          <td><button class="action-btn edit-btn">‚úèÔ∏è</button></td>
          <td><button class="action-btn delete-btn">üóëÔ∏è</button></td>
        </tr>
        <% }); %>
      </table>
    </div>
  </body>
</html>
