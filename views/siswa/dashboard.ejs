<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #4a90e2;
            margin: 0;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: flex-end;
            padding: 10px 20px;
        }

        .header a {
            margin-left: 20px;
            color: white;
            text-decoration: none;
        }

        .logout-btn {
            background-color: #dc3545;
            color: white;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
        }

        .dashboard-container {
            display: flex;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            gap: 20px;
        }

        .card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            flex: 1;
        }

        .ranking-title {
            color: #0d47a1;
            text-align: center;
            margin-bottom: 30px;
            font-size: 24px;
        }

        .your-rank {
            text-align: center;
            font-size: 48px;
            margin: 20px 0;
        }

        .rank-number {
            color: #0d47a1;
        }

        .rank-total {
            color: #dc3545;
        }

        .scores-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
            margin-top: 20px;
        }

        .score-item {
            background: #0d47a1;
            color: white;
            padding: 15px;
            border-radius: 5px;
            display: flex;
            align-items: center;
        }

        .score-circle {
            background: white;
            color: #0d47a1;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 10px;
            font-weight: bold;
        }

        .class-table {
            width: 100%;
            margin-top: 20px;
        }

        .class-table th {
            text-align: left;
            padding: 10px;
            color: #0d47a1;
        }

        .class-table td {
            padding: 10px;
        }

        .class-table tr:nth-child(even) {
            background: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="header">
        <a href="/ranking">Ranking</a>
        <a href="/siswa/profile">Profile</a>
        <a href="/logout" class="logout-btn">Log Out</a>
    </div>

    <div class="dashboard-container">
        <!-- Left Card - Personal Ranking -->
        <div class="card">
            <h2 class="ranking-title">PERINGKAT KAMU</h2>
            <div class="your-rank">
                <span class="rank-number">32</span>
                <span>/</span>
                <span class="rank-total">100</span>
            </div>
            <div class="scores-grid">
                <div class="score-item">
                    <div class="score-circle">90</div>
                    <span>UTS</span>
                </div>
                <div class="score-item">
                    <div class="score-circle">90</div>
                    <span>UAS</span>
                </div>
                <div class="score-item">
                    <div class="score-circle">90</div>
                    <span>Ibadah</span>
                </div>
                <div class="score-item">
                    <div class="score-circle">90</div>
                    <span>Praktek</span>
                </div>
                <div class="score-item">
                    <div class="score-circle">90</div>
                    <span>Absensi</span>
                </div>
                <div class="score-item">
                    <div class="score-circle">90</div>
                    <span>Tugas</span>
                </div>
            </div>
        </div>

        <!-- Right Card - Class Ranking -->
        <div class="card">
            <h2 class="ranking-title">PERINGKAT KELAS</h2>
            <table class="class-table">
                <thead>
                    <tr>
                        <th>Kelas</th>
                        <th>Nama siswa</th>
                        <th>Peringkat</th>
                    </tr>
                </thead>
                <tbody>
                    <% const students = [
                        { kelas: '7-1', nama: 'Siti Aisyah', peringkat: '1#' },
                        { kelas: '7-2', nama: 'Muhammad Ravin', peringkat: '2#' },
                        { kelas: '7-3', nama: 'Aziz Pratama', peringkat: '3#' },
                        { kelas: '7-4', nama: 'Balqis', peringkat: '4#' },
                        { kelas: '7-5', nama: 'Khairani', peringkat: '5#' }
                    ] %>
                    <% students.forEach(function(student) { %>
                        <tr>
                            <td><%= student.kelas %></td>
                            <td><%= student.nama %></td>
                            <td><%= student.peringkat %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>